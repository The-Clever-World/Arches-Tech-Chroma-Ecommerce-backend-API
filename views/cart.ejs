                  <div class="row g-0">
                     <div class="col-md-4">
                        <a href="/products/<%= item._id %>">
                           <img src="/public/<%= item.images[0] %>" class="img-fluid rounded-start" alt="...">
                        </a>
                        </div>
                     <div class="col-md-8">
                        <div class="card-body">
                           <div class="item-cart" style="text-align: right;">
                              <button value="<%= item._id %> " class="cart-delete"
                                 style="border: 0; background-color: transparent;">
                                 <i class="far fa-trash-alt" aria-hidden="true"></i>
                              </button>
                           </div>
                           <h3 class="card-title">
                              <%= item.name %>
                           </h3>
                           <div class=" d-flex justify-content-between">
                              <p class="card-text">Product Id: <%= item._id %>
                              </p>

                              <p class="card-text">QTY: 1</p>
                           </div>
                           <div class="category-price-div">
                              <span class="category-count"><b>₹<%= item.price %> </b></span>
                              <span class="old-price">
                                 <del>₹<%= Number(item.price * 1.3).toFixed(2) %> </del>
                                 <ins style="background-color: lightblue; border-radius:6px;">30% Off</ins>!</span>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="col card mb-3">
                     <p style="font-size: 18px; color: gray; background-color: whitesmoke; padding: 15px;">Product is
                        unavailable for the delivery mode selected. Remove product or change delivery mode</p>
                  </div>
               </div>
            </div>
            <% }) %>

