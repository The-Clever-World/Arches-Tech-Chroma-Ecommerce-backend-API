<body class="">

   <!---HEADER --->
   <header class="navbar navbar sticky-top" style="background-color:#49a5a2; height:10rem;">
      <div class="container">
         <div class="row align-center">
            <div class="col-sm-2" style=" top: -1.4rem; padding: 10px;">
               <div class="logo common-logo">
                  <a href="/"><img src="/public/images/cartTrayLogo.png" alt="Logo"></a>
                  <!-- <a href="/"><img src="/public/images/logo_1.png" alt="Logo"></a> -->
               </div>
               <!----- for fixed header logo--->

            </div>
            <!--LOGO--->
            <div class="col-md-6 search-row">
               <div class="top-search-bar">
                  <form>
                     <div class="input-group">
                        <input type="text_1" class="form-control" style="color:black;" placeholder="Search this blog">
                        <div class="input-group-append">
                           <button class="btn btn-warning bg-warning" type="button">
                              <i style="color:black;" class="fa fa-search"></i>
                           </button>
                        </div>
                  </form>
                  <div class="container" style="font-size:15px;">
                     <div class="col-md-4 d-flex justify-content-center" style="left: -6rem;">
                        <div class="dropdown">
                           <span class="dropbtn"><b>Products</b></span>
                           <div class="dropdown-content">
                              <!--  List of categories  -->

                              <% categories.forEach(function(category){ %>
                              <a href="/<%= category._id %>">
                                 <%= category.name %>
                              </a>
                              <% }); %>

                           </div>
                           <i class="fa fa-angle-down" aria-hidden="true" style="color: white;"></i>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <!--SEARCH--->

         <div class="col-md-4" style=" top: -2rem;">
            <div class="header-right">
               <ul id="login__container">
                  <li class="my-account">

                  </li>
                  <li class="cart-page">

                  </li>
                  <li id="admin_ref">

                  </li>
                  <li id="login__link">
                     <a href="#" style="color:white;" class="think-link login__link__ref" data-toggle="modal"
                        data-target="#staticBackdrop_1">
                        Login / Register
                     </a>
                  </li>

               </ul>
            </div>

         </div>

      </div>
      </div>
   </header>



   <!-- Modal -->
   <div class="">
      <div class="modal fade bd-example-modal-lg" id="staticBackdrop_1" data-backdrop="static" data-keyboard="false"
         tabindex="" aria-labelledby="staticBackdropLabel" aria-hidden="true">
         <div class="modal-dialog modal-lg">
            <div class="modal-content" style="background-color: LightGray;">
               <div class="modal-header">
                  <h2 class="modal-title" id="staticBackdropLabel">Sign in to Cart.com</h2>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                  </button>
               </div>
               <br>

               <div class="form">
                  <h1 class="text-center">Registration Form</h1>
                  <!-- Progress bar -->
                  <div class="progressbar">
                     <div class="progress" id="progress"></div>

                     <div class="progress-step progress-step-active" data-title="Intro"></div>
                     <div class="progress-step" data-title="Contact"></div>
                     <div class="progress-step" data-title="ID"></div>
                     <div class="progress-step" data-title="Password"></div>
                  </div>

                  <!-- Steps -->
                  <div class="form-step form-step-active">
                     <div class="input-group">
                        <label for="username">Full Name</label>
                        <input type="text" name="username" id="username" />
                     </div>
                     <div class="input-group">
                        <label for="position"> Username</label>
                        <input type="text" name="position" id="position" />
                     </div>
                     <div class="">
                        <a href="#" class="btn btn-next width-50 ml-auto">Next</a>
                     </div>
                  </div>
                  <div class="form-step">
                     <div class="input-group">
                        <label for="phone">Phone</label>
                        <input type="text" name="phone" id="phone" />
                     </div>
                     <div class="input-group">
                        <label for="email">Email</label>
                        <input type="text" name="email" id="email" />
                     </div>
                     <div class="btns-group">
                        <a href="#" class="btn btn-prev">Previous</a>
                        <a href="#" class="btn btn-next">Next</a>
                     </div>
                  </div>
                  <div class="form-step">
                     <div class="input-group">
                        <label for="dob">Date of Birth</label>
                        <input type="date" name="dob" id="dob" />
                     </div>
                     <div class="input-group">
                        <label for="ID">National ID</label>
                        <input type="number" name="ID" id="ID" />
                     </div>
                     <div class="btns-group">
                        <a href="#" class="btn btn-prev">Previous</a>
                        <a href="#" class="btn btn-next">Next</a>
                     </div>
                  </div>
                  <div class="form-step">
                     <div class="input-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" />
                     </div>
                     <div class="input-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" name="confirmPassword" id="confirmPassword" />
                     </div>
                     <div class="btns-group">
                        <a href="#" class="btn btn-prev">Previous</a>
                        <button class="btn btn-primary" id="register">Submit</button>
                     </div>
                  </div>
               </div>
               <div class="text-center think-link" data-toggle="modal" data-target="#staticBackdrop_2">Click here
                  for all ready Login User <a href="#" style="color:blue;">Login</a></div>

               <div class="modal-footer d-flex justify-content-end">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
               </div>

            </div>
         </div>
      </div>
   </div>



   <!-- Modal -->
   <div class="">
      <div class="modal fade bd-example-modal-lg" id="staticBackdrop_2" data-backdrop="static" data-keyboard="false"
         tabindex="" aria-labelledby="staticBackdropLabel" aria-hidden="true">
         <div class="modal-dialog modal-lg">
            <div class="modal-content" style="background-color: LightGray;">
               <div class="modal-header">
                  <h2 class="modal-title" id="staticBackdropLabel">Sign in to Cart.com</h2>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                  </button>
               </div>
               <br>

               <div class="signup-form">
                  <h2>Login</h2>
                  <p class="hint-text">WelCome To Cart.com</p>

                  <div class="form-group">
                     <input type="email" id="loginEmail" class="form-control" name="username"
                        placeholder="Enter your Email" required="true" />
                  </div>
                  <div class="form-group">
                     <input type="password" id="loginPass" class="form-control" name="contactno"
                        placeholder="Enter your Password" required="true" maxlength="10" />
                  </div>

                  <div class="form-group">
                     <button type="submit" class="btn btn-success btn-lg btn-block" id="login"
                        name="submit">Submit</button>
                  </div>
                  <div class="text-center think-link" data-toggle="modal" data-target="#staticBackdrop_1">Click
                     here for New User<a href="#" style="color:blue;">Registration</a>Click Close Button</div>
               </div>
               <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
               </div>
            </div>
         </div>
      </div>
   </div>



