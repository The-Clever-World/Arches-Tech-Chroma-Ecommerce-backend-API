                    <div class="card mb-5 col-md-12 mt-4">
                        <div class="card-body">
                            <b>Shipping Address</b>
                                <p class="card-text">
                                    <%= order.shippingAddress && order.shippingAddress.address %> ,
                                        <%= order.shippingAddress && order.shippingAddress.state %> ,
                                            <%= order.shippingAddress && order.shippingAddress.country %> ,
                                                <%= order.shippingAddress && order.shippingAddress.zip %>
                                </p>
                            </div>
                            <div class="card-body">
                            <b>Billing Address</b>
                                <p class="card-text">
                                    <%= order.billingAddress && order.billingAddress.address %> ,
                                        <%= order.billingAddress && order.billingAddress.state %> ,
                                            <%= order.billingAddress && order.billingAddress.country %> ,
                                                <%= order.billingAddress && order.billingAddress.zip %>
                                </p>
                            </div>

                    </div>
                </div>
            </div>
            <div class="card-text  col-md-5" style="top: -50rem;">
                <div class="card-body ">
                    <h3 class="card-title mb-5 d-flex justify-content-center mt-5"><b>Your Oder</b></h3>
                    <% order.products.forEach((product)=> { %>
                        <div class="category-price-div d-flex justify-content-between mt-3">
                            <span class="category-count">
                                <%= product.name %>
                            </span>
                            <span class="old-price"> <b id="p-price">₹<%= product.price %></b></span>
                        </div>
                        <br />

                        <% }) %>

                            <hr>

                            <div class="category-price-div d-flex justify-content-between mt-3"> <span
                                    class="category-count"><span>Sub Total</span></span>
                                <span class="old-price">₹<%= order.totalPrice %></span>
                            </div>

                            <div class="category-price-div d-flex justify-content-between mt-3"> <span
                                    class="category-count"><span>Tax</span></span>
                                <span class="old-price"> <span>Calculate at checkOut</span></span>
                            </div>

                            <div class="category-price-div d-flex justify-content-between mt-3"> <span
                                    class="category-count"><span>Estimated Shiping</span></span>
                                <span class="old-price"> <span>Calculate at checkout</span></span>
                            </div>

                            <button class="col mt-3">Check Avilability</button>
                </div>
            </div>


        </div>
    </div>
